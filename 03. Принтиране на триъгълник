using System;


namespace _05112020
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = int.Parse(Console.ReadLine());
            int i = 0;
            PrintLine(i);
            PrintTriangle(n);

;
        }
        static void PrintLine(int lenght)
        {
            for (int i = 1; i <= lenght; i++)
            {
                Console.Write(i + " ");
            }
            Console.WriteLine();
        }
        static void PrintTriangle(int n)
        {
            for (int row = 1; row <= n; row++)
            {
                PrintLine(row);
            }
            for (int row = n-1; row  >= 1; row--)
            {
                PrintLine(row);
            }
        }
       
        
    }
}
